<alfresco-config>
	<!-- Introduction of new namespaces defined by this model -->
	<namespaces>
		<namespace uri="http://www.eisenvault.net/model/content/1.0"
			prefix="ev" />
	</namespaces>

	<!-- Document Library config section -->
	<config evaluator="string-compare" condition="DocumentLibrary">
		<types>
			<type name="cm:content">
				<subtype name="ev:doc" />
				<!-- content added by shikha to display -->
				<subtype name="ev:resume" />
				<subtype name="ev:pf2" />
				<subtype name="ev:pf10" />
				<subtype name="ev:esicform" />
			</type>
			<type name="cm:folder">
				<!-- folder added by shikha to display -->
				<subtype name="ev:empfile" />

			</type>
			<type name="trx:transferTarget">
				<subtype name="trx:fileTransferTarget" />
				<!-- folder added by shikha to display -->
				<subtype name="ev:empfile" />
			</type>
		</types>

	</config>

	<!-- Search config section -->
	<config replace="true" evaluator="string-compare" condition="AdvancedSearch">
		<advanced-search>
			<!-- Forms for the advanced search type list -->
			<forms>
				<form labelId="search.form.label.cm_content" descriptionId="search.form.desc.cm_content">cm:content
				</form>
				<form labelId="search.form.label.cm_folder" descriptionId="search.form.desc.cm_folder">cm:folder
				</form>
				<form labelId="type.ev_doc" description="Search for EisenVault Documents">ev:doc</form>

			</forms>
		</advanced-search>
	</config>

	<!-- Removing "Manage Aspects" options & adding custom OCR action - Vipul 
		Swarup 25/09/2015 -->
	<config evaluator="string-compare" condition="DocLibActions">
		<actions>
			<action id="document-manage-aspects">
				<evaluator>evaluator.doclib.action.disableAction</evaluator>
			</action>


			<action id="ev-ocr-english" type="javascript" label="actions.ev.ocr-english"
				icon="ocr-icon">


				<param name="function">waitmessageDialog</param>
				<permissions>
					<permission allow="true">Write</permission>
				</permissions>
				<param name="action">English-OCR</param>
				<param name="successMessage">message.ev.ocr-success</param>
				<param name="failureMessage">message.ev.ocr-failure</param>
				<!-- Show/Hide action on basis of MimeType added by Raghav Bhardwaj 26/10/2015 -->

				<evaluator>evaluator.doclib.action.oEditMimetype</evaluator>







			</action>
			<action id="ev-ocr-hindi" type="javascript" label="actions.ev.ocr-hindi"
				icon="ocr-icon">


				<param name="function">waitmessageDialog</param>
				<permissions>
					<permission allow="true">Write</permission>
				</permissions>
				<param name="action">Hindi-OCR</param>
				<param name="successMessage">message.ev.ocr-success</param>
				<param name="failureMessage">message.ev.ocr-failure</param>
				<!-- Show/Hide action on basis of MimeType added by Raghav Bhardwaj 26/10/2015 -->

				<evaluator>evaluator.doclib.action.oEditMimetype</evaluator>

			</action>
			<action id="ev-ocr-bengali" type="javascript" label="actions.ev.ocr-bengali"
				icon="ocr-icon">



				<param name="function">waitmessageDialog</param>
				<permissions>
					<permission allow="true">Write</permission>
				</permissions>
				<param name="action">Bengali-OCR</param>
				<param name="successMessage">message.ev.ocr-success</param>
				<param name="failureMessage">message.ev.ocr-failure</param>
				<!-- Show/Hide action on basis of MimeType added by Raghav Bhardwaj 26/10/2015 -->

				<evaluator>evaluator.doclib.action.oEditMimetype</evaluator>

			</action>
		</actions>
		<actionGroups>
			<actionGroup id="document-browse">
				<action index="500" id="ev-ocr-english" />
				<action index="510" id="ev-ocr-hindi" />
				<action index="520" id="ev-ocr-bengali" />
			</actionGroup>
			<actionGroup id="document-details">
				<action index="500" id="ev-ocr-english" />
				<action index="510" id="ev-ocr-hindi" />
				<action index="520" id="ev-ocr-bengali" />
			</actionGroup>
		</actionGroups>
	</config>

	<!-- model-type added by shikha to display folder fields -->

	<config evaluator="model-type" condition="ev:empfile">
		<forms>
			<form>
				<field-visibility>
					<show id="ev:EmployeeFile" />
					<show id="ev:EmployeeId" />
					<show id="ev:DeptName" />
					<show id="ev:MgrName" />
					<show id="ev:MgrId" />
					<show id="ev:DOJ" />
					<show id="ev:DOL" />
					<show id="ev:UFI" />
				</field-visibility>
			</form>
		</forms>
	</config>

	<!-- model-type added by shikha to display empfile fields -->

	<config evaluator="node-type" condition="ev:empfile">
		<forms>
			<form>
				<field-visibility>
					<show id="ev:EmployeeFile" />
					<show id="ev:EmployeeId" />
					<show id="ev:DeptName" />
					<show id="ev:MgrName" />
					<show id="ev:MgrId" />
					<show id="ev:DOJ" />
					<show id="ev:DOL" />
					<show id="ev:UFI" />
				</field-visibility>
			</form>
		</forms>
	</config>



	<config evaluator="string-compare" condition="DocLibCustom">
		<dependencies>
			<js src="components/documentlibrary/ev-wait-action.js" />
		</dependencies>
	</config>

</alfresco-config>