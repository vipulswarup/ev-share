<alfresco-config>

	<!-- Document Library config section -->
	<config evaluator="string-compare" condition="DocumentLibrary">
		<types>
			<type name="cm:content">
				<subtype name="ev:eisenvaultDoc" />
			</type>
		</types>
	</config>

	<!-- Advanced Search config section -->
	<config evaluator="string-compare" condition="AdvancedSearch">
		<advanced-search>
			<!-- Forms for the advanced search type list -->
			<forms>

				<form labelId="type.ev_eisenvaultDoc" descriptionId="search.form.desc.ev_eisenvaultDoc">ev:eisenvaultDoc
				</form>

			</forms>
		</advanced-search>
	</config>

	<!-- Removing "Manage Aspects" options & adding custom OCR action - Vipul 
		Swarup 25/09/2015 -->
	<config evaluator="string-compare" condition="DocLibActions">
		<actions>
			<action id="document-manage-aspects">
				<evaluator>evaluator.doclib.action.disableAction</evaluator>
			</action>


			<action id="ev-ocr-english" type="javascript" label="actions.ev.ocr-english"
				icon="ocr-icon">


				<param name="function">waitmessageDialog</param>
				<permissions>
					<permission allow="true">Write</permission>
				</permissions>
				<param name="action">English-OCR</param>
				<param name="successMessage">message.ev.ocr-success</param>
				<param name="failureMessage">message.ev.ocr-failure</param>
				<!-- Show/Hide action on basis of MimeType added by Raghav Bhardwaj 26/10/2015 -->

				<evaluator>evaluator.doclib.action.oEditMimetype</evaluator>

			</action>
			<action id="ev-ocr-hindi" type="javascript" label="actions.ev.ocr-hindi"
				icon="ocr-icon">


				<param name="function">waitmessageDialog</param>
				<permissions>
					<permission allow="true">Write</permission>
				</permissions>
				<param name="action">Hindi-OCR</param>
				<param name="successMessage">message.ev.ocr-success</param>
				<param name="failureMessage">message.ev.ocr-failure</param>
				<!-- Show/Hide action on basis of MimeType added by Raghav Bhardwaj 26/10/2015 -->

				<evaluator>evaluator.doclib.action.oEditMimetype</evaluator>

			</action>
			<action id="ev-ocr-bengali" type="javascript" label="actions.ev.ocr-bengali"
				icon="ocr-icon">



				<param name="function">waitmessageDialog</param>
				<permissions>
					<permission allow="true">Write</permission>
				</permissions>
				<param name="action">Bengali-OCR</param>
				<param name="successMessage">message.ev.ocr-success</param>
				<param name="failureMessage">message.ev.ocr-failure</param>
				<!-- Show/Hide action on basis of MimeType added by Raghav Bhardwaj 26/10/2015 -->

				<evaluator>evaluator.doclib.action.oEditMimetype</evaluator>

			</action>
			<!-- Audit trail action id and action group entries added by Raghav Bhardwaj 
				on 03-11-15 -->

			<action id="document-call-ws" type="pagelink" label="actions.document.call-ws">
				<param name="page">hdp/ws/list-auditdata?nodeRef={node.nodeRef}
				</param>
			</action>


		</actions>
		<actionGroups>
			<actionGroup id="document-browse">
				<action index="500" id="ev-ocr-english" />
				<action index="510" id="ev-ocr-hindi" />
				<action index="520" id="ev-ocr-bengali" />

				<action index="600" id="document-call-ws" />

			</actionGroup>
			<actionGroup id="document-details">
				<action index="500" id="ev-ocr-english" />
				<action index="510" id="ev-ocr-hindi" />
				<action index="520" id="ev-ocr-bengali" />

				<action index="600" id="document-call-ws" />

			</actionGroup>

		</actionGroups>
	</config>


	<config evaluator="string-compare" condition="DocLibCustom">
		<dependencies>
			<js src="components/documentlibrary/ev-wait-action.js" />
		</dependencies>
	</config>


	<!-- Added by Sujay for PredictiveTextDropDown changes on 17/11/2015 -->
	<config>
		<forms>
			<dependencies>
				<js src="/js/dependent-control.js" />
				<js src="/js/dynamic-dropdown.js" />
			</dependencies>
		</forms>
	</config>
	<config evaluator="model-type" condition="cdl:customerListItem">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" />
					<show id="cdl:value" />
					<show id="cdl:sortOrder" />
				</field-visibility>
				<appearance>
					<field id="cm:name">
						<control>
							<control-param name="maxLength">255</control-param>
						</control>
					</field>
					<field id="cdl:value">
						<control>
							<control-param name="maxLength">255</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	<config evaluator="aspect" condition="myc:test">
		<forms>
			<form>
				<field-visibility>
					<show id="myc:customer" />
				</field-visibility>
				<appearance>
					<set id="general" appearance="bordered-panel" label="Customer" />
					<field id="myc:customer" set="general">
						<control template="/form-controls/selectone-customer.ftl">
							<control-param name="picklistName">CustomerList</control-param>
							<control-param name="level">1</control-param>
							<control-param name="loadLabel">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	<config>
		<forms>
			<constraint-handlers>
				<constraint type="MANDATORY" validation-handler="Alfresco.forms.validation.mandatory"
					event="keyup,propertychange,change" />
			</constraint-handlers>
		</forms>
	</config>


	<!-- Vipul Swarup 08 Jan 2016 - Mandating minimum password & user name lengths -->
	<config evaluator="string-compare" condition="Users" replace="true">
		<users>
			<!-- minimum length for username and password -->
			<username-min-length>2</username-min-length>
			<password-min-length>8</password-min-length>
		</users>
	</config>


	<!-- evl:doc type -->
	<config evaluator="node-type" condition="ev:eisenvaultDoc">
		<forms>
			<!-- Default form configuration for the ev:eisenvaultDoc type -->
			<form>
				<field-visibility>
					<!-- OOTB content type -->
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="cm:description" force="true" />
					<show id="cm:author" force="true" />
					<show id="size" for-mode="view" />
					<show id="cm:creator" for-mode="view" />
					<show id="cm:created" for-mode="view" />
					<show id="cm:modifier" for-mode="view" />
					<show id="cm:modified" for-mode="view" />
					<!-- ev:eisenvaultDoc -->
					<show id="ev:yearOfCreation" />
					<show id="ev:monthOfCreation" />
					<show id="ev:dateOfCreation" />
					<show id="ev:serialNumber" for-mode="view" />
				</field-visibility>

				<appearance>

					<!-- OOTB content type -->
					<field id="cm:name">
						<control>
							<control-param name="maxLength">255</control-param>
						</control>
					</field>
					<field id="cm:title">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>
					<field id="cm:description">
						<control>
							<control-param name="activateLinks">true</control-param>
						</control>
					</field>
					<field id="size">
						<control template="/org/alfresco/components/form/controls/size.ftl" />
					</field>

					<!-- EV Doc Properties -->
					<field id="ev:yearOfCreation" label-id="prop.ev_yearOfCreation">
						<control>
							<control-param name="maxLength">4</control-param>
						</control>
					</field>

					<field id="ev:monthOfCreation" label-id="prop.ev_monthOfCreation">
						<control>
							<control template="/org/alfresco/components/form/controls/selectone.ftl" />
						</control>
					</field>
					<field id="ev:dateOfCreation" label-id="prop.ev_dateOfCreation">
						<control>
							<control-param name="maxLength">2</control-param>
						</control>
					</field>
					<field id="ev:serialNumber" label-id="prop.ev_serialNumber"></field>

					<!-- END EV Props -->
				</appearance>
			</form>

			<!-- Document Library pop-up Edit Metadata form -->
			<form id="doclib-simple-metadata">
				<field-visibility>
					<!-- OOTB content type -->
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="cm:description" force="true" />
					<!-- ev:eisenvaultDoc -->
					<show id="ev:yearOfCreation" />
					<show id="ev:monthOfCreation" />
					<show id="ev:dateOfCreation" />
				</field-visibility>

				<appearance>
					<!-- OOTB content type -->
					<field id="cm:name">
						<control>
							<control-param name="maxLength">255</control-param>
						</control>
					</field>
					<field id="cm:title">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>
					<field id="cm:description">
						<control>
							<control-param name="activateLinks">true</control-param>
						</control>
					</field>
					<!-- EV Doc Properties -->
					<field id="ev:yearOfCreation" label-id="prop.ev_yearOfCreation">
						<control>
							<control-param name="maxLength">4</control-param>
						</control>
					</field>

					<field id="ev:monthOfCreation" label-id="prop.ev_monthOfCreation">
						<control>
							<control template="/org/alfresco/components/form/controls/selectone.ftl" />
						</control>
					</field>
					<field id="ev:dateOfCreation" label-id="prop.ev_dateOfCreation">
						<control>
							<control-param name="maxLength">2</control-param>
						</control>
					</field>

					<!-- END EV Props -->
				</appearance>
			</form>

			<!-- Document Library Inline Edit form -->
			<form id="doclib-inline-edit">
				<field-visibility>
					<!-- OOTB content type -->
					<show id="cm:name" />
					<show id="cm:title" force="true" />
					<show id="cm:description" force="true" />
					<show id="cm:content" force="true" />
					<!-- ev:eisenvaultDoc -->
					<show id="ev:yearOfCreation" />
					<show id="ev:monthOfCreation" />
					<show id="ev:dateOfCreation" />
				</field-visibility>

				<appearance>
					<!-- OOTB content type -->
					<field id="cm:name">
						<control>
							<control-param name="maxLength">255</control-param>
						</control>
					</field>
					<field id="cm:title">
						<control template="/org/alfresco/components/form/controls/textfield.ftl" />
					</field>
					<field id="cm:content">
						<control>
							<control-param name="editorAppearance">explorer</control-param>
							<control-param name="forceEditor">true</control-param>
						</control>
					</field>
					<!-- EV Doc Properties -->
					<field id="ev:yearOfCreation" label-id="prop.ev_yearOfCreation">
						<control>
							<control-param name="maxLength">4</control-param>
						</control>
					</field>

					<field id="ev:monthOfCreation" label-id="prop.ev_monthOfCreation">
						<control>
							<control template="/org/alfresco/components/form/controls/selectone.ftl" />
						</control>
					</field>
					<field id="ev:dateOfCreation" label-id="prop.ev_dateOfCreation">
						<control>
							<control-param name="maxLength">2</control-param>
						</control>
					</field>

					<!-- END EV Props -->
				</appearance>
			</form>
		</forms>
	</config>

